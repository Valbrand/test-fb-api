<% flash.each do |name, msg| -%>
	<%= content_tag :div, msg, class: name %>
<% end -%>

<h1>Provide a Facebook Page Id below</h1>

<div class="row">
	<div class="col m3">
		<p>
			Example: in the page <span class="fblink">www.facebook.com/valbrand</span>, <em class="fblink">valbrand</em> is the page id.
		</p>
	</div>
	<div class="col m9">
		<form action="/subscribe" method="post">
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			<div class="row">
				<div class="input-field col m6">
					<label for="appid">App ID</label>
					<input type="text" name="appid" id="appid">
				</div>
				<div class="col m6">
					<button class="btn-large" type="submit">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<% if @subs.empty? -%>
			<p>
				Currently, there are no subscriptions
			</p>
		<% else -%>
			<table class="striped centered">
				<thead>
					<tr>
						<th>App ID</th>
						<th>Remove subscription</th>
					</tr>
				</thead>

				<tbody>
					<% @subs.each do |subscription| -%>
						<tr>
							<td><%= subscription %></td>
							<td>Delete</td>
						</tr>
					<% end -%>
				</tbody>
			</table>
		<% end -%>
	</div>
</div>